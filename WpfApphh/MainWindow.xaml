<Window x:Class="WpfApphh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApphh"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="SeniorityFilterComboBox" Width="550" Height="30" 
          SelectionChanged="SeniorityFilterComboBox_SelectionChanged" 
          HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

        <DataGrid x:Name="TeachersDataGrid" AutoGenerateColumns="True" Background="FloralWhite"
          HorizontalAlignment="Left" VerticalAlignment="Top" 
          Width="550" Height="300" Margin="10,50,0,0"/>
    </Grid>
</Window>
