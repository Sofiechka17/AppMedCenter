<Window x:Class="WpfAppsamost.projectOrg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppsamost"
        mc:Ignorable="d"
        Title="projectOrg" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="Organizations" HorizontalAlignment="Left" Height="28" Margin="189,95,0,0" VerticalAlignment="Top" Width="400" SelectionChanged="Organizations_SelectionChanged"/>
        <Label Content="Организация" HorizontalAlignment="Left" Margin="188,50,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <ComboBox x:Name="Projects" HorizontalAlignment="Left" Height="28" Margin="189,0,0,0" VerticalAlignment="Center" Width="400" SelectionChanged="Projects_SelectionChanged" DisplayMemberPath="ProjectName"/>
        <Label Content="Проекты" HorizontalAlignment="Left" Margin="189,155,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
